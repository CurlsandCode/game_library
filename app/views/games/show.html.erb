<div class="container game-box">
  <h1 class= "game-title text-center"><%= @game.title.upcase %></h1>
  <p><%= @game.description %></p>
  <div class="row col-12">
    <div class="col-4 game-stats">
      <strong>Player Notes:</strong>
      <p><%= @game.notes %></p>
    </div>
    <div class="col-4 game-stats text-center">
      <strong>Game Rating:</strong> <br>
      <%= render partial: "games/stars", locals: {rating: @game.rating} %>
    </div>
    <div class="col-4 game-stats text-center">
      <%= render partial: "games/complete", locals: {game: @game} %>
    </div>
  </div>
  <div class="col-12 text-center">
    <%= link_to "Edit Game", edit_game_path(@game), class: "col-2 btn btn-info"  %>
    <%= link_to 'Delete Game', game_path(@game), method: :delete, data: {confirm: 'Are you sure you want to delete this?'},class: 'btn btn-danger col-2' %>
  </div>
</div>
<div class="container game-box text-center" id="game-screenshots">
  <%= render partial: "games/screenshots", locals: {screenshots: @game.screenshots} %>
  <div class="col-12 text-center">
    <br>
    <%= render partial: "games/screenshot_modal", locals: {screenshot: @screenshot, game: @game} %>
  </div>
</div>

<div class="container game-box" id="game-comments" data-game="<%= @game.id %>">
  <h2 class= "game-title text-center">GAME NOTES</h2>
  <ul id="comment-box">

  </ul>

  <div class="comment-form">

    <%= form_for @comment, url: game_comments_path(@game) do |f| %>
      <div class="field row">
        <%= f.label "Notes:", class: "h4 col-2 col-form-label"%>
        <%= f.text_area :content, class: "col-10 form-control" %>
      </div>
      <br>

      <%= f.submit "Add Note", :class=> "btn btn-primary" %>

    <% end %>

  </div>
</div>
