<div class="col-10 offset-1 text-center">
  <h1><%= @game.title %></h1>
  <p><%= @game.description %></p>

  <% @game.screenshots.each do |pic|%>

    <%= image_tag pic.picture.url(:medium) %> <br>

  <% end %>
  <%= link_to "Edit Game", edit_game_path(@game)  %>

  <%= form_for @screenshot, url: game_screenshots_path(@game) do |f| %>
    <%= f.label :picture %>
    <%= f.file_field :picture %> <br>
    <%= f.label :caption %>
    <%= f.text_field :caption %> <br>
    <%= f.submit %>
  <% end %>
</div>
