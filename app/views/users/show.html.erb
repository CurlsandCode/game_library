<div class="col-10 offset-1 text-center">
  <h1>Hello, <%= @user.username %>!</h1> <br>
  <% if @user.games.empty? %>
    <h4>You have no games :(</h4> <br>
    <h5><%= link_to "Click Here to Add a Game",  new_game_path %></h5>
  <% else %>
    <h4>Your Games:</h4>
</div>
    <% @user.games.each do |game| %>
      <% if game.completed %>
        <div class="game-box-complete col-10 offset-1">
          <%= render partial: "users/game", locals: {game: game} %>
        </div>
      <% else %>
        <div class="game-box-uncomplete col-10 offset-1">
          <%= render partial: "users/game", locals: {game: game} %>
        </div>
      <% end %>
    <% end %>
  <% end %>
<div class="col-12 text-center">
  <%= link_to "Add More Games", new_game_path, class: "btn btn-outline-warning btn-sm" %>
</div>
<br>
